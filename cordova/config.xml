<?xml version='1.0' encoding='utf-8'?>
<widget id="com.eslocator.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ES Locator</name>
    <description>Emergency Services Locator - Real-time incident management and vehicle dispatch</description>
    <author email="support@eslocator.com" href="https://eslocator.com">ES Locator Team</author>
    
    <content src="index.html" />
    
    <!-- Global Preferences -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="default" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#0077B6" />
    <preference name="StatusBarStyle" value="lightcontent" />
    
    <!-- Android Preferences -->
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="34" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    
    <!-- iOS Preferences -->
    <preference name="deployment-target" value="14.0" />
    <preference name="WKWebViewOnly" value="true" />
    <preference name="SwiftVersion" value="5" />
    
    <!-- Access Origins -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- Android Specific -->
    <platform name="android">
        <allow-intent href="market:*" />
        
        <!-- Edit Config for Permissions -->
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" xmlns:android="http://schemas.android.com/apk/res/android" />
        </edit-config>
        
        <config-file parent="/manifest" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" xmlns:android="http://schemas.android.com/apk/res/android" />
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" xmlns:android="http://schemas.android.com/apk/res/android" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" xmlns:android="http://schemas.android.com/apk/res/android" />
            <uses-permission android:name="android.permission.INTERNET" xmlns:android="http://schemas.android.com/apk/res/android" />
        </config-file>
    </platform>
    
    <!-- iOS Specific -->
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        
        <!-- iOS Privacy Descriptions -->
        <config-file parent="NSLocationWhenInUseUsageDescription" platform="ios" target="*-Info.plist">
            <string>ES Locator needs access to your location to show nearby emergency incidents and facilities.</string>
        </config-file>
        <config-file parent="NSLocationAlwaysAndWhenInUseUsageDescription" platform="ios" target="*-Info.plist">
            <string>ES Locator needs continuous access to your location for real-time incident tracking and dispatch routing.</string>
        </config-file>
    </platform>
    
    <!-- Plugins -->
    <plugin name="cordova-plugin-device" spec="^3.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="^5.0.0">
        <variable name="GPS_REQUIRED" value="true" />
    </plugin>
    <plugin name="cordova-plugin-network-information" spec="^3.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="^4.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.5" />
    
    <engine name="android" spec="^13.0.0" />
    <engine name="ios" spec="^7.1.0" />
</widget>
